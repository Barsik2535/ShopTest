@model IEnumerable<study_3.Models.User>
 
<h2>Список заказов</h2>
<p><a asp-action="Create">Добавить заказ</a></p>
<table class="table">
     <tr><th>Адрес</th><th>Количество</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Age</td>
        </tr>
        <td>
            <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить заказ</a>
        </td>
        <td>
            <form asp-action="Delete" asp-controller="Home" method="post" asp-route-id="@item.Id">
                <input type="submit" value="Удалить заказ"/>
            </form>
        </td>
    }
</table>